# Linear Configuration
LINEAR_API_KEY=lin_api_xxxxxxxxxxxxxxxx
LINEAR_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxx

# Webhook Authentication
# Optional: Bearer token for additional webhook authentication
# Linear does not support custom headers, so this is mainly for:
# - Additional proxy/API gateway authentication
# - Manual testing with curl/HTTP clients
WEBHOOK_BEARER_TOKEN=your-secret-bearer-token-here

# Require Bearer token authentication (set to true if you have a proxy/gateway)
# When true, all webhook requests must include: Authorization: Bearer <token>
WEBHOOK_AUTH_REQUIRED=false

# Admin API Key (for protected endpoints like /config, /sessions)
ADMIN_API_KEY=your-admin-api-key-here

# Kilo Cloud Configuration
KILO_API_KEY=kilo_xxxxxxxxxxxxxxxx
KILO_CLOUD_ENABLED=false
KILO_CLOUD_URL=https://app.kilo.ai

# Server Configuration
APP_NAME="Linear Kilo Webhook"
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Agent Mapping (JSON format)
# Maps Linear user emails to Kilo agent IDs
# Example: {"user@company.com": "build", "@company.com": "default-agent"}
AGENT_MAPPING={}
